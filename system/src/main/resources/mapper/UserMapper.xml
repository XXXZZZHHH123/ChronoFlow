<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="nus.edu.u.system.mapper.user.UserMapper">
    <resultMap id="UserWithRoleMap" type="nus.edu.u.system.domain.dto.UserRoleDTO">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="tenantId" column="tenant_id"/>

        <collection property="roles" ofType="nus.edu.u.system.domain.dto.RoleDTO">
            <id property="id" column="role_id"/>
            <result property="name" column="role_name"/>
            <result property="roleKey" column="role_key"/>
            <result property="status" column="role_status"/>
            <result property="remark" column="role_remark"/>
        </collection>
    </resultMap>
    <select id="selectUserWithRole" resultMap="UserWithRoleMap">
        SELECT u.id AS user_id,
        u.username,
        u.email,
        u.tenant_id,
        r.id AS role_id,
        r.name AS role_name,
        r.role_key,
        r.status AS role_status,
        r.remark AS role_remark
        FROM sys_user u
        LEFT JOIN sys_user_role ur ON u.id = ur.user_id
        LEFT JOIN sys_role r ON ur.role_id = r.id
        WHERE u.id = #{userId}
    </select>
</mapper>